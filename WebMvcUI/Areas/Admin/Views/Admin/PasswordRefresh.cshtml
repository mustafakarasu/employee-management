@model WebMvcUI.Models.Entities.Concrete.User

@{
    ViewData["Title"] = "Şifre Yenile";
}

<div class="col-md-4 offset-2 mt-5">
    &nbsp;&nbsp;<h2>Şifre Yenileme Sayfası</h2>
    <hr />
    <br />
    <dv class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-sm-12">
                    <span>Ad : </span>
                    <span>@Model.FirstName</span>
                </div>
                <div class="col-sm-12">
                    <span>Soyad : </span>
                    <span>@Model.LastName</span>
                </div>
            </div>

        </div>
    </dv>
    <br />
    <hr />
    <div class="row">
        <div class="col-md-12">
            @if (ViewBag.ErrorPassword != null)
            {
                <div class="alert alert-danger">
                    <p>@ViewBag.ErrorPassword</p>
                </div>

            }
            <form asp-action="PasswordRefresh">
                <div class="form-group">
                    <label class="control-label">Eski Şifre:</label>
                    <input name="oldPassword" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Yeni Şifre:</label>
                    <input name="newPassword" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Kaydet" class="btn btn-success btn-block" />
                </div>
            </form>
        </div>
    </div>

</div>


